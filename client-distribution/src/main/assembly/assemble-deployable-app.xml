<assembly>
    <id>deployable</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- ==================== Copying file structure ================= -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/war/</directory>
            <outputDirectory>deployable</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>deployable/webapp</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>${project.groupId}:client-app-war:war:${project.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
